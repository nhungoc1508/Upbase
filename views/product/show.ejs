<% layout('layouts/boilerplate') %>
    <div class="text-center">
        <h6 class="display-6 section-title">Item details</h6>
    </div>
    <div>
        <div class="form-group mb-3">
            <p class="form-label">Product name</p>
            <p>
                <%= product.name %>
            </p>
        </div>
        <div class="form-group mb-3">
            <p class="form-label">Product price</p>
            <p>
                <%= product.price %>
            </p>
        </div>
        <div class="form-group mb-3">
            <p class="form-label">Available stock</p>
            <p>
                <%= product.stock %>
            </p>
        </div>
        <div class="row">
            <div class="col-4 d-flex justify-content-center">
                <a href="/">Back to index</a>
            </div>
            <div class="col-4 d-flex justify-content-center">
                <form class="d-inline" action="/<%=product._id%>/edit?_method=GET" method="POST">
                    <button class="btn btn-info">Edit item</button>
                </form>
            </div>
            <div class="col-4 d-flex justify-content-center">
                <form class="d-inline" action="/<%=product._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete item</button>
                </form>
            </div>
        </div>
    </div>